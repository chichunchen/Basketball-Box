<div class="col-md-12"> 
  <div class="group">
    <%= link_to("新增隊伍", new_team_path , :class => "btn btn-primary pull-right" ) %>
  </div>

  <table class="table table-hover">
    <thead> 
      <tr>
        <td> # </td>
        <td> Title </td>
      </tr>
    </thead>

    <tbody>
            <% @teams.each do |team| %> 
    <tr>
      <td> # </td>
      <td>  <%= link_to(team.name, team_path(team)) %> </td>
      <td>  <%= link_to("修改", 
                        edit_team_path(team), 
                        :class => "btn btn-sm btn-default")%>

            <%= link_to("刪除", 
                        team_path(team), 
                        :class => "btn btn-sm btn-default", 
                        :method=>:delete,
                        data: { confirm: "Are you sure?" } )%></td> 
    </tr>
            <% end %> 
    </tbody>
  </table>
</div>
