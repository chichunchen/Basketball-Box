  <table class="table">
    <thead>
      <tr>
        <th> 賽事 </th>
        <th> 對手名稱 </th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @games.each do |game| %> 
        <tr>
          <td> 
            <%= link_to category_and_date(game), team_game_path(game.team, game) %>  
          </td>
          <td> <%= game.rival %> </td>
          <td> <%= link_to("修改", 
                           edit_team_game_path(game.team, game), 
                           :class => "btn btn-default btn-xs")%>

               <%= link_to("刪除",  
                           team_game_path(game.team, game), 
                           :class => "btn btn-default btn-xs ",
                           :method => :delete,
                           data: { confirm: "Are you sure?" } )%> </td>
        </tr>
      <% end %> 
    </tbody>
  </table>